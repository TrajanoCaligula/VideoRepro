<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ServRegUser</servlet-name>
        <servlet-class>isdcm.controller.ServRegUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServLogUser</servlet-name>
        <servlet-class>isdcm.controller.ServLogUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServRegVid</servlet-name>
        <servlet-class>isdcm.controller.ServRegVid</servlet-class>
        <multipart-config>
            <location>/</location> <!-- Ubicación temporal para guardar archivos -->
            <max-file-size>20848820</max-file-size> <!-- Tamaño máximo del archivo -->
            <max-request-size>418018841</max-request-size> <!-- Tamaño máximo total de la solicitud -->
            <file-size-threshold>1048576</file-size-threshold> <!-- Umbral para guardar en disco (en bytes) -->
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>ServListVid</servlet-name>
        <servlet-class>isdcm.controller.ServListVid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServWatchVid</servlet-name>
        <servlet-class>isdcm.controller.ServWatchVid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServRegUser</servlet-name>
        <url-pattern>/ServRegUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServLogUser</servlet-name>
        <url-pattern>/ServLogUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServRegVid</servlet-name>
        <url-pattern>/ServRegVid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServListVid</servlet-name>
        <url-pattern>/ServListVid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServWatchVid</servlet-name>
        <url-pattern>/ServWatchVid</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>ServUser</servlet-name>
        <servlet-class>/ServUser</servlet-class>
    </servlet>
    
    <context-param>
        <param-name>upload.location</param-name>
        <param-value>D:/GIT/VideoRepro/uploads</param-value>
    </context-param>
</web-app>
